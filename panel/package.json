{
  "name": "TechLab-AI-Agent",
  "version": "1.0.0",
  "description": "Painel de desktop para o TechLab AI Agent.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.techlab.ai-agent",
    "productName": "TechLab AI Agent",
    "files": [
      "main.js",
      "index.html",
      "preload.js",
      "node_modules/**/*"
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerSidebar": "build/installerSidebar.bmp",
      "uninstallDisplayName": "TechLab AI Agent Uninstaller"
    }
  }
}